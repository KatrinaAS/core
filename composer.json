{
    "name": "lotgd/core",
    "description": "Core functionality for Legend of the Green Dragon, a text-based RPG game.",
    "license": "AGPL-3.0",
    "version": "0.5.0",
    "autoload": {
        "psr-4": {
            "LotGD\\Core\\": "src/",
            "LotGD\\Core\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/daenerys"
    ],
    "require": {
        "php": "^8.0.0",
        "ext-pdo": "*",
        "composer/composer": "*",
        "gedmo/doctrine-extensions": "*",
        "doctrine/orm": "^2.8",
        "doctrine/common": "^3.0",
        "monolog/monolog": "*",
        "symfony/console": "*",
        "symfony/yaml": "*",
        "d11wtq/boris": "*",
        "ramsey/uuid-doctrine": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/austenmc/php-docblock-checker"
        }

    ],
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpunit/php-code-coverage": "*",
        "friendsofphp/php-cs-fixer": "*"
    }
}
